<div class="container mt-4 text-center">
  <%= image_tag("logo.png", class: "logo") %>
  <h1>Boston Celtics</h1>
  <h2>Squad 2022/2023</h2>
  <%= form_with url: players_path, method: :get, class: "d-flex pt-5 pb-4 justify-content-center gap-2" do |f| %>
    <%= f.text_field :query, value: params[:query], placeholder: "Search player by name or position", style:"border-color:dark-gray; padding:7px; border-style:outset; border-width:2px; text-decoration:none; height:45px; width:245px;" %>
    <%= f.submit "Search", class: 'btn-boston', style:"border-color:dark-gray; padding:7px; border-style:outset; border-width:2px; text-decoration:none;" %>
    <%= link_to "Clear", players_path, style: "width: 60px; text-decoration: underline; align-self:center; color:white;" %>
  <% end %>
  <div class="d-flex flex-wrap players-container text-start">
    <% @players.each do |player| %>
      <%= link_to player_path(player), style:"text-decoration:none; color:white;" do%>
        <div class="mx-3 my-3 card-player" >
          <%  if player.images.attached? %>
            <%= image_tag player.images.sample, crop: :fill %>
          <% end %>
          <div class="card-data">
            <li>Name: <%= player.name %></li>
            <li>Position: <%= player.position %></li>
            <li>Age: <%= player.age %> years</li>
            <li>Number: <%= player.number %></li>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= link_to "Create new player", new_player_path, class:"btn btn-boston mt-2" %>
</div>
